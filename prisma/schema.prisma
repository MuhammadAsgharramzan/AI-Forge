// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  auctions      Auction[] @relation("SellerAuctions")
  bids          Bid[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Auction System Models ---

enum AuctionStatus {
  DRAFT
  ACTIVE
  CANCELLED
  ENDED
  SOLD
}

enum AuctionType {
  ENGLISH
  DUTCH
  SEALED_BID
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  
  auctions    Auction[]
}

model Auction {
  id          String        @id @default(cuid())
  title       String
  description String        @db.Text
  
  // Status & Type
  status      AuctionStatus @default(DRAFT)
  auctionType AuctionType   @default(ENGLISH)
  
  // Pricing
  startingPrice Float
  currentPrice  Float       @default(0) // Tracks current highest bid
  reservePrice  Float?
  buyoutPrice   Float?
  
  // Timing
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  startsAt    DateTime      @default(now())
  endsAt      DateTime
  
  // Relations
  sellerId    String
  seller      User          @relation("SellerAuctions", fields: [sellerId], references: [id])
  
  categoryId  String
  category    Category      @relation(fields: [categoryId], references: [id])
  
  bids        Bid[]
  images      ProductImage[]
  
  // Metadata
  tags        String[]
  viewCount   Int           @default(0)
  
  @@index([status])
  @@index([sellerId])
  @@index([categoryId])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  
  createdAt DateTime @default(now())
  
  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id])
  
  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id])
  
  @@index([auctionId])
  @@index([bidderId])
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  key       String   // Uploadthing key
  isPrimary Boolean  @default(false)
  
  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
}
